<Window x:Class="NomDuProjet.Views.First"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="1000" Background="#2c3e50">

    <Grid>
        <!-- Fond d'Ã©cran -->
        <Image Source="images.jpeg" Stretch="Fill" Opacity="0.3" />

        <!-- Titre principal -->
        <TextBlock Text="Welcome" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <!-- Contenu des boutons -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <!-- Bouton pour continuer en tant que client -->
            <Button Name="ClientButton" Content="Continue as Client" Height="80" Width="300" FontSize="20" FontWeight="Bold" Background="#3498db" Foreground="White" BorderBrush="#2980b9" BorderThickness="2" Padding="10"  Click="ContinueAsClient_Click"/>

            <!-- Bouton pour continuer en tant qu'administrateur -->
            <Button Name="AdminButton" Content="Continue as Admin" Height="80" Width="300" FontSize="20" FontWeight="Bold" Background="#2ecc71" Foreground="White" BorderBrush="#27ae60" BorderThickness="2" Padding="10" Click="ContinueAsAdmin_Click"/>
        </StackPanel>
    </Grid>
</Window>
