<Window x:Class="NomDuProjet.Views.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Clients" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">

        <!-- Titre -->
        <TextBlock Text="Gestion des Clients" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20" />

        <!-- Champs de formulaire -->
        <Label Content="Prénom" />
        <TextBox Name="FirstNameTextBox" Width="300" />

        <Label Content="Nom" />
        <TextBox Name="LastNameTextBox" Width="300" />

        <Label Content="Email" />
        <TextBox Name="EmailTextBox" Width="300" />

        <Label Content="Téléphone" />
        <TextBox Name="PhoneNumberTextBox" Width="300" />

        <!-- Boutons en bas -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,30,0,0">
            <Button Content="Ajouter" Width="100" Margin="10" Click="AddButton_Click" Background="#4CAF50" Foreground="White" />
            <Button Content="Annuler" Width="100" Margin="10" Click="CancelButton_Click" Background="#f44336" Foreground="White" />
        </StackPanel>
    </StackPanel>
</Window>
