<Window x:Class="NomDuProjet.RoomViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NomDuProjet"
        Title="Available Rooms" Height="350" Width="525">

    <Window.DataContext>
        <local:RoomViewModel />
    </Window.DataContext>

    <Grid>
        <ListBox ItemsSource="{Binding AvailableRooms}" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding RoomNumber}" FontWeight="Bold" />
                        <TextBlock Text="{Binding RoomType}" />
                        <TextBlock Text="{Binding IsAvailable, Converter={StaticResource BoolToStringConverter}}" />
                        <!-- Ajoutez d'autres éléments visuels comme l'image, etc. -->
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Load Available Rooms"
                Command="{Binding LoadRoomsCommand}"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center" />
    </Grid>
</Window>
